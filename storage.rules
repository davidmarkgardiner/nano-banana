rules_version = '2';

// Firebase Storage Security Rules for Nano Banana
service firebase.storage {
  match /b/{bucket}/o {
    // Users can read and write their own images in the nano-banana folder
    match /nano-banana/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read any nano-banana images for sharing
    match /nano-banana/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}